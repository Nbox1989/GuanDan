<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context="${relativePackage}.${activityClass}" >
    <LinearLayout 
        android:id="@+id/ll_scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:text="己方打"
	        android:textSize="14sp"
	        android:textColor="#f2f2f2"
	        android:textStyle="bold"/>
	    <com.example.guandan.customizedUI.ImageViewCardScore
	        android:layout_width="15dp"
	        android:layout_height="20dp"
	        android:layout_marginRight="10dp"
	        android:scaleType="fitXY"/>"
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="对方打"
	        android:textSize="14sp"
	        android:textColor="#f2f2f2"
	        android:textStyle="bold"
	        android:layout_marginRight="5dp"/>
	    <com.example.guandan.customizedUI.ImageViewCardScore
	        android:layout_width="15dp"
	        android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_functionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <com.example.guandan.customizedUI.ImageViewTalk
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"/>
        <com.example.guandan.customizedUI.ImageViewTrust
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"/>
        <com.example.guandan.customizedUI.ImageViewSettings
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"/>
        <com.example.guandan.customizedUI.ImageViewQuit
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_functionbar"
        android:orientation="horizontal"
        android:gravity="bottom">
        <com.example.guandan.customizedUI.ViewPortrait
            android:id="@+id/vp_opposite"
            android:layout_width="wrap_content"
            android:layout_height="54dp"/>
        <com.example.guandan.customizedUI.ImageViewCardBack
	        android:layout_width="15dp"
	        android:layout_height="20dp"/>
        <com.example.guandan.UI.ViewDiscardDeck 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
        <com.example.guandan.customizedUI.ViewClock
            android:layout_width="40dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    
	<LinearLayout 
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom">
        <com.example.guandan.customizedUI.ViewPortrait
            android:id="@+id/vp_left"
            android:layout_width="wrap_content"
            android:layout_height="54dp"/>
        <com.example.guandan.customizedUI.ImageViewCardBack
	        android:layout_width="15dp"
	        android:layout_height="20dp"/>
        <com.example.guandan.UI.ViewDiscardDeck 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
        <com.example.guandan.customizedUI.ViewClock
            android:layout_width="40dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    
	<LinearLayout 
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_vertical"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom">
        <com.example.guandan.customizedUI.ViewClock
            android:layout_width="40dp"
            android:layout_height="50dp"/>
        <com.example.guandan.UI.ViewDiscardDeck 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
        <com.example.guandan.customizedUI.ImageViewCardBack
	        android:layout_width="15dp"
	        android:layout_height="20dp"/>
        
        <com.example.guandan.customizedUI.ViewPortrait
            android:id="@+id/vp_right"
            android:layout_width="wrap_content"
            android:layout_height="54dp"/>
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/iv_vertical"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"/>
    
    <LinearLayout 
        android:id="@+id/ll_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/ll_panel"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <com.example.guandan.customizedUI.ViewPortrait
            android:id="@+id/vp_self"
            android:layout_width="wrap_content"
            android:layout_height="54dp"/>
        <ImageView 
            android:layout_width="37dp"
            android:layout_height="32dp"
            android:src="@drawable/straightflush"
            android:scaleType="fitXY"/>
        <com.example.guandan.UI.ViewDiscardDeck 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>/>
    </LinearLayout>
    
    <com.example.guandan.UI.ViewDiscardDeck 
	    android:id="@+id/vdd"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_above="@+id/ll_panel"
	    android:layout_centerHorizontal="true"/>
    <LinearLayout 
        android:id="@+id/ll_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_above="@+id/vcd">
        <com.example.guandan.customizedUI.ViewClock
            android:id="@+id/vc"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"/>
		<com.example.guandan.customizedUI.ButtonSkip
		    android:id="@+id/btn_skip"
		    android:layout_width="84dp"
	        android:layout_height="44dp"
            android:layout_marginLeft="5dp"	        
            android:layout_marginRight="5dp"/>
		<com.example.guandan.customizedUI.ButtonHint
		    android:id="@+id/btn_hint"
		    android:layout_width="84dp"
	        android:layout_height="44dp"
            android:layout_marginLeft="5dp"	        
            android:layout_marginRight="5dp"/>
		<com.example.guandan.customizedUI.ButtonDiscard
		    android:id="@+id/btn_discard"
		    android:layout_width="84dp"
	        android:layout_height="44dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/tv_addcards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_panel"
        android:layout_alignBottom="@+id/ll_panel"
        android:layout_marginLeft="20dp"
        android:text="@string/addcards"/>
    <Spinner 
        android:id="@+id/sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_addcards"
        android:layout_alignBottom="@+id/ll_panel"
        android:layout_marginLeft="5dp"
        android:entries="@array/cards"/>
	<com.example.guandan.UI.ViewCardDeck 
	    android:id="@+id/vcd"
	    android:layout_width="wrap_content"
	    android:layout_height="99dp"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"/>"
	    
<!-- 	<com.example.guandan.customizedUI.DisplayView -->
<!-- 	    android:id="@+id/viewdisplay" -->
<!-- 	    android:layout_width="match_parent" -->
<!-- 	    android:layout_height="match_parent" -->
<!-- 	    android:visibility="gone"/> -->
</RelativeLayout>
